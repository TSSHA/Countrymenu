  <view class="left-side">
    <van-sidebar active-key="{{ activeKey }}" bind:change="onChange">
       <van-sidebar-item title="{{item.cat_name}}" 
         wx:for="{{firstCategory}}"
         wx:key="cat_id">
       </van-sidebar-item>
    </van-sidebar>
  </view>
  <view class="right-side">
    <scroll-view class='nav' scroll-y bindscrolltolower="onPullUp" bindrefresherrestore="onPullDown" refresher-enabled="true" bindrefresherrefresh="onScrollRefresh" refresher-triggered="{{triggered}}">
      <view class="box_1"
      wx:for="{{menuListData}}"
    wx:key="*this">
    <navigator  url="../menudetails/menudetails?menuid={{item.cat_id}}"
    >
    <image mode="widthFix" src="{{item.cat_icon}}"></image>
    <text class="menu_name">{{item.goods_name}}</text>
    <text class="menu_describe">{{item.goods_describe}}</text>
    </navigator>
  </view>
  </scroll-view>
  </view>
<van-notify id="van-notify" />


