  <view class="left-side">
    <van-sidebar active-key="{{ activeKey }}" bind:change="onChange">
       <van-sidebar-item title="{{item.cat_name}}" 
         wx:for="{{firstCategory}}"
         wx:key="*this">

       </van-sidebar-item>
    </van-sidebar>
  </view>
  <view class="right-side">
    <scroll-view class='nav' scroll-y scroll-top='{{topNum}}' bindscroll="scrolltoupper" bindscrolltolower="onPullUp" bindrefresherrestore="onPullDown" refresher-enabled="true" bindrefresherrefresh="onScrollRefresh"  bindtap="goTop" refresher-triggered="{{triggered}}">
    <view class="box_1" 
    wx:for="{{goodsListData}}"
    wx:key="*this">
    <navigator class="goods" url="../goodsdetails/goodsdetails?goodsid={{item.cat_id}}" >
    <van-card
    num="1"
    price="{{item.goods_price}}"
    desc="{{item.goods_describe}}"
    title="{{item.goods_name}}"
    thumb="{{item.cat_icon}}"
    title-class="product-name"
    desc-class="product-desc"
    price-class="product-price">
   </van-card>
    </navigator>
   </view>
  </scroll-view>
  </view>
<van-notify id="van-notify" />


