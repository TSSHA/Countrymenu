<!--pages/marketcategory/marketcategory.wxml-->
<view class="cates">
  <!--搜索框 开始-->
  <SearchInput></SearchInput>
  <!--搜索框 结束-->
  <view class="top_menu"> 
    <scroll-view scroll-x>
      <view class="item_list" 
      wx:for="{{catesData}}"
      wx:key="*this">
        <navigator>
          <image mode="widthFix" src="{{item.cat_icon}}"></image>
          <text>{{item.cat_name}}</text>
        </navigator>
      </view>
    </scroll-view>
  </view>
<view class="cates_container">
  <scroll-view scroll-y class="left_menu">
    <view class="menu_item"
     wx:for="{{catesData2}}"
      wx:key="*this">{{item.cat_name}}</view>
  </scroll-view>
  <scroll-view scroll-y class="right_content">
    <view class="goods_group"
    wx:for="{{goodsData}}"
      wx:key="*this">
      <navigator>
      <view>
           <image mode="widthFix" src="{{item.cat_icon}}"/>
      </view>
              <text class="goods_name">{{ item.goods_name }}</text>
              <text class="goods_describe">{{ item.goods_describe }}</text>
              <text class="goods_price">{{ item.goods_price }}</text>
          </navigator>
    </view>
  </scroll-view>
</view>
</view>