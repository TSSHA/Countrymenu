.container{
  padding: 0;
}
.container .buy{
  width: 100%;
  height: 100rpx;
  background: #e50e38;
  text-align: center;
  color: #fff;
  line-height: 88rpx;
  position:fixed;
  bottom:0;
  font-size:30rpx;
  letter-spacing:3rpx;
}

.slideImage{
  width: 750rpx;
  height: 500rpx;
}
.name{
  text-align: center;
  font-size: 40rpx;
  line-height: 48rpx;
  padding-top: 20rpx;

}

.desc{
  padding: 20rpx 20rpx 20rpx 20rpx ;
  text-align: center;
  font-size: 30rpx;
  line-height: 48rpx;
}

.cailiao{
  margin: 30rpx 30rpx 30rpx 30rpx ;
  font-size: 30rpx;
  line-height: 48rpx;
}

.help{
  text-align: center;
  margin: 40rpx 20rpx 30rpx 20rpx ;
  font-size: 30rpx;
  line-height: 48rpx;
}



.goodslist .goods{
  width: 50%;
  float: left;
  
}

.goodslist .product-name {
  font-size: 34rpx;
  font-weight: bolder;
}

.goodslist .product-desc {
  font-size: 30rpx;
  color: gray;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}

.buzhou{
  text-align: center;
  margin: 40rpx 20rpx 30rpx 20rpx ;
  font-size: 30rpx;
  line-height: 48rpx;
}

.buzhous{
  margin: 40rpx 20rpx 30rpx 20rpx ;
}



.buzhou_pic{
  margin-top: 30rpx;
  border-radius: 20rpx;
}


.empty{
  height: 100rpx;
}

